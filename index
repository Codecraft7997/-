    }

    .btn-outline-dark {
      border: 2px solid #fff;
      color: #fff;
    }

    .alert {
      font-size: 18px;
    }

    #resultsSection {
      display: none;
    }

    /* Fire animation */
    .fire {
      position: absolute;
      top: -50px;
