  <!-- Fire, Smoke and Lightning Effects -->
  <div class="smoke"></div>
  <div class="lightning"></div>
  <div class="fire"></div>

  <!-- Sounds -->
  <audio id="successSound" src="https://cdn.pixabay.com/audio/2022/03/15/audio_14cfae7c4d.mp3"></audio>
  <audio id="errorSound" src="https://cdn.pixabay.com/audio/2022/03/15/audio_d9f57f2cb8.mp3"></audio>

  <!-- Navbar -->
  <nav class="navbar fixed-top navbar-dark">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <img src="logo.png" alt="Logo" class="logo-img" />
        <span class="navbar-brand mb-0 h1">ELMOSTAMARA ONFIRE</span>
      </div>
    </div>
  </nav>

  <div class="container">
    <section id="predictionSection">
      <h1 class="match-title">🔥 توقع المباراة النهائية 🔥</h1>
      <div class="team-names">المستعمرة VS السلسول</div>
      <div class="countdown" id="countdownTimer">00:00:00</div>

      <div class="card">
        <form id="predictionForm">
          <div class="mb-3">
            <label for="name" class="form-label">👤 اسمك</label>
            <input type="text" class="form-control" id="name" required />
          </div>

          <label class="form-label">🏆 الفريق الفائز:</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="winner" value="المستعمرة" />
            <label class="form-check-label">المستعمرة</label>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="winner" value="السلسول" />
            <label class="form-check-label">السلسول</label>
          </div>

          <div class="row">
            <div class="col">
              <label class="form-label">⚽ نتيجة المستعمرة</label>
              <input type="number" class="form-control" id="score1" min="0" />
            </div>
            <div class="col">
              <label class="form-label">⚽ نتيجة السلسول</label>
              <input type="number" class="form-control" id="score2" min="0" />
            </div>
          </div>

          <button type="submit" class="btn btn-primary w-100 mt-3" id="submitBtn">🚀 إرسال التوقع</button>
        </form>
        <div id="resultMessage" class="mt-3 text-center"></div>
        <button onclick="showResults()" class="btn btn-outline-dark w-100 mt-3">📋 عرض التوقعات</button>
      </div>
    </section>

    <section id="resultsSection">
      <h2 class="text-center mt-5 mb-4">📋 التوقعات المسجلة</h2>
      <div id="predictionsList" class="table-responsive"></div>
      <div class="text-center mt-4">
        <button onclick="showPredictionForm()" class="btn btn-outline-dark">🔙 الرجوع للتوقع</button>
      </div>
    </section>
  </div>

  <script>
    const closeTime = new Date(2025, 8, 17, 18, 0, 0);
    const countdownEl = document.getElementById("countdownTimer");
    const submitBtn = document.getElementById("submitBtn");
    const successSound = document.getElementById("successSound");
    const errorSound = document.getElementById("errorSound");

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = closeTime - now;

      if (distance <= 0) {
        countdownEl.innerHTML = "🚫 تم إغلاق التوقعات";
        countdownEl.style.color = "#888";
        countdownEl.style.boxShadow = "none";
        submitBtn.disabled = true;
        errorSound.play();
        return;
      }

      const hours = String(Math.floor((distance / (1000 * 60 * 60)) % 24)).padStart(2, '0');
      const minutes = String(Math.floor((distance / (1000 * 60)) % 60)).padStart(2, '0');
      const seconds = String(Math.floor((distance / 1000) % 60)).padStart(2, '0');

      countdownEl.innerHTML = `⏳ ${hours}:${minutes}:${seconds}`;

      if (distance > 5 * 60 * 1000) {
        countdownEl.style.color = "#0f0";
        countdownEl.style.boxShadow = "0 0 20px #0f0";
      } else if (distance > 60 * 1000) {
        countdownEl.style.color = "#ffa500";
        countdownEl.style.boxShadow = "0 0 20px #ffa500";
      } else {
        countdownEl.style.color = "#ff0000";
        countdownEl.style.boxShadow = "0 0 20px #ff0000";
      }
    }

    setInterval(updateCountdown, 1000);
    updateCountdown();

    const form = document.getElementById("predictionForm");
    const resultMessage = document.getElementById("resultMessage");

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      const now = new Date();
      if (now > closeTime) {
        resultMessage.innerHTML = "<div class='alert alert-danger'>انتهى وقت التوقعات!</div>";
        errorSound.play();
        return;
      }

      const name = document.getElementById("name").value.trim();
      const winner = document.querySelector('input[name="winner"]:checked');
      const score1 = document.getElementById("score1").value;
      const score2 = document.getElementById("score2").value;

      if (!name || !winner || score1 === "" || score2 === "") {
        resultMessage.innerHTML = "<div class='alert alert-warning'>يرجى ملء كل الحقول!</div>";
        return;
      }

      const predictions = JSON.parse(localStorage.getItem("predictions") || "[]");
      if (predictions.some(p => p.name === name)) {
        resultMessage.innerHTML = "<div class='alert alert-danger'>لقد قمت بالتوقع مسبقًا.</div>";
        return;
      }

      const prediction = {
        name,
        winner: winner.value,
        score1,
        score2,
        time: new Date().toLocaleString()
      };

      predictions.push(prediction);
      localStorage.setItem("predictions", JSON.stringify(predictions));

      resultMessage.innerHTML = "<div class='alert alert-success'>✅ تم حفظ توقعك!</div>";
      successSound.play();
      form.reset();
    });

    function showResults() {
      document.getElementById("predictionSection").style.display = "none";
      document.getElementById("resultsSection").style.display = "block";

      const predictions = JSON.parse(localStorage.getItem("predictions") || "[]");
      const container = document.getElementById("predictionsList");

      if (predictions.length === 0) {
        container.innerHTML = "<p class='text-warning text-center'>لا توجد توقعات بعد.</p>";
        return;
      }

      let html = `<table class="table table-bordered table-striped text-white">
        <thead class="table-dark">
          <tr>
            <th>👤 الاسم</th>
            <th>🏆 الفائز</th>
            <th>⚽ النتيجة</th>
            <th>🕒 الوقت</th>
          </tr>
        </thead><tbody>`;

      predictions.forEach(p => {
        html += `<tr>
          <td>${p.name}</td>
          <td>${p.winner}</td>
          <td>${p.score1} - ${p.score2}</td>
          <td>${p.time}</td>
        </tr>`;
      });

      html += "</tbody></table>";
      container.innerHTML = html;
    }

    function showPredictionForm() {
      document.getElementById("resultsSection").style.display = "none";
      document.getElementById("predictionSection").style.display = "block";
    }
  </script>
</body>
</html>
